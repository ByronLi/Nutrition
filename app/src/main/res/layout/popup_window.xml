<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="280dp"
        android:layout_height="450dp"
        android:background="@color/colorAccent">
    <ImageButton android:layout_width="40dp"
                 android:background="@drawable/exit_button"
                 android:id="@+id/popup_exit_button"
                 android:scaleType="centerInside"
                 android:layout_height="40dp" android:layout_alignParentTop="true"
                 android:layout_alignParentEnd="true"/>


    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               android:id="@+id/popup_food_image"
               android:layout_marginTop="19dp" android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#000"
            android:id="@+id/popup_food_name"
            android:text="FoodName really long should take up to 2 linestetstststsasdasd"
            android:layout_marginTop="17dp"
            android:layout_margin="20dp"
            android:layout_below="@+id/popup_food_image" android:layout_alignParentStart="true"/>

    <TextView android:layout_width="wrap_content"
              android:text="BrandName"
              android:id="@+id/popup_brand_name"
              android:ellipsize="end"
              android:textSize="18dp"
              android:layout_height="wrap_content" android:layout_alignTop="@+id/popup_food_name"
              android:layout_alignStart="@+id/popup_food_name" android:layout_marginTop="51dp"
              android:layout_alignEnd="@+id/popup_food_name"/>
    <TextView android:layout_width="wrap_content"
              android:text="Calories"
              android:id="@+id/popup_food_cal"
              android:ellipsize="end"
              android:textSize="18dp"
              android:layout_height="wrap_content"
              android:layout_below="@+id/popup_brand_name" android:layout_alignStart="@+id/popup_brand_name"/>
    <TextView android:layout_width="wrap_content"
              android:text="1 Serving"
              android:id="@+id/popup_food_serving"
              android:ellipsize="end"
              android:textSize="18dp"
              android:layout_height="wrap_content"
              android:layout_below="@+id/popup_food_cal" android:layout_alignStart="@+id/popup_food_cal"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add food"
            android:id="@+id/popup_add_food_button"
            android:background="@drawable/black_border"
            android:outlineProvider="background"
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>

</RelativeLayout>